---
interface Props {
    title: string;
    description: string;
    date: Date;
    id: string;
}

const { title, description, date, id } = Astro.props;

const istoDateString = date.toISOString();
const formattedDate = date.toLocaleDateString("es-MX", {
    year: "numeric",
    month: "2-digit",
    day: "2-digit",
    timeZone: "UTC",
});
---

<article>
    <time datetime={istoDateString}>{formattedDate}</time>
    <div class="content">
        <h1>
            {title}
        </h1>
        <p>
            {description}
        </p>
    </div>
    <div class="read-more">
        <a href=`/blog/posts/${id}`>Read more â†’</a>
    </div>
</article>

<style>
    article {
        display: flex;
        flex-direction: column;
        row-gap: 0.5rem;
        margin-bottom: 2rem;
    }

    article div.contet {
        display: flex;
        flex-direction: column;
        row-gap: 0.25rem;
    }

    time {
        color: var(--color-text-muted);
    }

    h1 {
        font-size: 1.5rem;
        margin: 0;
    }

    p {
        margin: 0;
    }
</style>
